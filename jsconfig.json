{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@/*": ["./client/src/*"],
      "@db/*": ["./db/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "checkJs": false
  },
  "include": ["client/src/**/*.js", "client/src/**/*.jsx"],
  "exclude": ["node_modules", "**/*.ts", "**/*.tsx"]
}
