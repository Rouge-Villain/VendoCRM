{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@db/*": ["./client/src/types/*"],
      "@/components/*": ["./client/src/components/*"],
      "@/lib/*": ["./client/src/lib/*"],
      "@/hooks/*": ["./client/src/hooks/*"],
      "@/styles/*": ["./client/src/styles/*"]
    }
  },
  "include": [
    "client/src/**/*.js",
    "client/src/**/*.jsx"
  ],
  "exclude": ["node_modules", "build", "dist"]
}
