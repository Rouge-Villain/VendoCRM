{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["./src/types/*"],
      "@db/schema": ["./src/types/db.js"],
      "@/components/*": ["./src/components/*"],
      "@/components/ui": ["./src/components/ui"],
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"]
    },
    "rootDirs": [".", ".."]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "../db/**/*.js"
  ],
  "exclude": ["node_modules"]
}
