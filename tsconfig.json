{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@db/*": ["./client/src/db/*"]
    }
  },
  "include": ["client/src/**/*.ts", "client/src/**/*.tsx"],
  "references": [{ "path": "./client/tsconfig.json" }]
}
