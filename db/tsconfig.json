{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": true,
    "composite": true,
    "rootDir": "."
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
